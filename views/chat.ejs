
<%- include('./includes/head.ejs') %>
    <title>chat </title>
   
  </head>
  <body>
      <%- include('./includes/navbar.ejs')%>
    <div class="chat">
        <div id="sidebar" class="chat__sidebar ">

        </div>
        <div class="chat__main ">
            <div id="messages" class="chat__messages">

            </div>

            <div class="compose">
                <form id="message-form">
                    <input name="message" placeholder="Message" required autocomplete="off">
                    <button><i class="far fa-paper-plane"></i></button>
                </form>
             
            </div>
        </div>
    </div> 

    <script id="message-template" type="text/html">
            <div class="message">
                <p class="user">
                    <span class="avatar">
                        <img src="{{avatar}}" alt="">
                    </span>
                    <span class="message__name">{{username}}</span>
                    <span class="message__meta">{{createdAt}}</span>
                </p>
                <p class="message__content">{{message}}</p>
            </div>
        </script>

  

    <script id="sidebar-template" type="text/html">
        <h2 class="room-title"><i class="fas fa-globe-africa"></i></i> {{room}}</h2>
         <p class="last">

         </p>
        <ul class="users">
            {{#users}}
                <li class="{{id}}">
                  <p> {{username}}</p>
                  <span class="avatar"><img src="{{avatar}}" alt=""></span> 
                </li>
            {{/users}}
        </ul>
    </script>
    <%-include('./includes/bulma.ejs')%>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/javascripts/chat.js"></script>
</body>

</html>

